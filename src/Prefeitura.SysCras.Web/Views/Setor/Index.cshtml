@model IEnumerable<SetorViewModel>

@{ 
    ViewData["Title"] = "Setores";
}


<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
        <h1 class="display-4">Setores</h1>
        <p class="lead">Manutenção de dados dos Setores do Cras.</p>
    </div>
</div>

<div class="container">
    <a class="btn btn-sm btn-outline-primary mb-2" asp-action="Cadastrar" asp-controller="Setor">
        <i class="fas fa-plus-circle"></i>Novo
    </a>
    <table class="table table-striped text-sm-left">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>Setor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.TituloSetor</td>
                    <td>
                        <div class="container justify-content-around">
                            <a class="btn btn-sm btn-outline-primary mr-2" asp-action="Detalhes" asp-route-id="@item.Id">
                                <span class="fas fa-search"></span>
                            </a>
                            <a class="btn btn-sm btn-outline-primary mr-2" asp-action="Atualizar" asp-route-id="@item.Id">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Excluir" asp-route-id="@item.Id">
                                <span class="fas fa-trash-alt"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>