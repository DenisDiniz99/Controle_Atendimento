@model SetorViewModel

@{
    ViewData["Title"] = "Detalhes do Setor";
}

<div class="container">
    <table class="table table-striped text-sm-left">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>Setor</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.TituloSetor</td>
            </tr>
        </tbody>
    </table>
    <hr />
    <h5>Cargos</h5>
    <table class="table table-striped text-sm-left">
        <thead class="thead-dark">
            <tr>
                <th>Código</th>
                <th>Cargo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cargos.ToList())
            {
                @if (!Model.Cargos.Any())
                {
                    <tr>
                        <td class="text-center">0</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TituloCargo.</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>