@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!--Menu principal-->
<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
    @if (!SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link active text-white" aria-current="page" asp-action="Login" asp-controller="Usuario">Entrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Registro" asp-controller="Usuario">Registrar</a>
        </li>
    }
    else
    {
        <li class="nav-item mr-4">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bars"></i> Menu
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                    <a class="dropdown-item" asp-action="Index" asp-controller="Assunto">Assuntos</a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="Atendimento">Atendimentos</a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="Cidadao">Cidadãos</a>
                    <a class="dropdown-item" asp-action="Index" asp-controller="TipoAtendimento">Tipos Atendimento</a>
                </div>
            </div>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white">
                @User.Identity.Name <i class="fas fa-user"></i>
            </a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-white" asp-action="Sair" asp-controller="Usuario">
                Sair <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
    }
</ul>