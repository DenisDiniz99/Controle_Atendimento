@model ErroViewModel
@{
    ViewData["Title"] = "Erro encontrado";
}

<div class="d-flex justify-content-center">
    <img class="img-fluid" src="~/img/erro.png" alt="Erro" />
</div>

@{
    if (Model == null)
    {
        <div class="d-flex justify-content-center">
            <h2 class="text-black">@Model.StatusCode</h2>
        </div>

        <div class="d-flex justify-content-center">
            <div class="col-6">
                <h6 class="text-black text-center">Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h6>
            </div>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-center">
            <h2 class="text-black">@Model.StatusCode - @Model.Titulo</h2>
        </div>

        <div class="d-flex justify-content-center">
            <div class="col-6">
                <h6 class="text-black text-center">@Model.Mensagem</h6>
            </div>
        </div>
    }
}

