@model CidadaoViewModel

@{ 
    ViewData["Title"] = "Exclusão de Cidadão";
}

<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto">
        <div class="card-body" style="width: 800px;">
            <h5 class="card-title text-secondary">
                <i class="fas fa-trash-alt"></i>
                Exclusão de Cidadão
            </h5>
            <partial name="_MsgExcluirPartial" />
            <hr />
            <form asp-action="Excluir">
                <div class="form-group">
                    <label for="id" class="form-label" title="Codigo">Código</label>
                    <input asp-for="Id" class="form-control form-text text-dark" id="titulo" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label for="nome" class="form-label" title="Nome">Nome</label>
                    <input asp-for="Nome" class="form-control form-text text-dark" id="nome" readonly="readonly" />
                </div>
                <input type="submit" class="btn btn-sm btn-success btn-form" title="Excluir" />
                <a class="btn btn-sm btn-danger btn-form" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>
