@model IEnumerable<CidadaoViewModel>

@{
    ViewData["Title"] = "Cadastro de Cidadão";
}

<div class="container">
    <div class="row">
        <h5 class="text-secondary">
            <i class="fas fa-user-friends"></i>
            Cidadãos
        </h5>
    </div>
    <div class="row mt-2">
        <div class="col-4">
            <a class="btn btn-sm btn-primary mb-2" asp-action="Cadastrar">
                <i class="fas fa-plus-circle"></i>Novo Cidadão
            </a>
        </div>
    </div>

    <table class="table table-light text-sm-left">
        <thead>
            <tr>
                <th hidden="hidden">Código</th>
                <th>Nome</th>
                <th>Nome Social</th>
                <th>CPF</th>
                <th>Data de Cadastro</th>
                <th>Situação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td hidden="hidden">@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.NomeSocial</td>
                    <td>@item.Cpf</td>
                    <td>@item.DataCad</td>
                    @{
                        if (item.Situacao)
                        {
                            <td>Ativo</td>
                        }
                        else
                        {
                            <td>Inativo</td>
                        }
                    }
                    <td>
                        <div class="container justify-content-around">
                            <a class="btn btn-sm btn-outline-primary mr-2" asp-action="Detalhes" asp-route-id="@item.Id">
                                <span class="fas fa-search"></span>
                            </a>
                            <a class="btn btn-sm btn-outline-primary mr-2" asp-action="Atualizar" asp-route-id="@item.Id">
                                <span class="fas fa-edit"></span>
                            </a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Excluir" asp-route-id="@item.Id">
                                <span class="fas fa-trash-alt"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>