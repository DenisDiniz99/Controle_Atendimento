@model AtendimentoViewModel

@{ 
    ViewData["Title"] = "Novo Atendimento";
}

<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto">
        <div class="card-body" style="width: 800px;">
            <h5 class="card-title text-center text-secondary">
                Novo Atendimento
            </h5>
            <hr />
            <vc:summary></vc:summary>
            <form asp-action="Cadastrar">
                <div class="form-group">
                    <label for="titulo" class="form-label" title="Cidadão">Cidadão</label>
                    <select class="form-select" aria-label="CidadaoId" asp-for="CidadaoId" asp-items=ViewBag.Cidadaos>
                        <option selected>Escolha um Cidadão</option>
                    </select>
                    <span asp-validation-for="CidadaoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="titulo" class="form-label" title="Assunto">Assunto</label>
                    <select class="form-select" aria-label="AssuntoId" asp-for="AssuntoId" asp-items=ViewBag.Assuntos>
                        <option selected>Escolha um Setor</option>
                    </select>
                    <span asp-validation-for="AssuntoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="titulo" class="form-label" title="TipoAtendimento">Tipo Atendimento</label>
                    <select class="form-select" aria-label="SetorId" asp-for="TipoAtendimento">
                        <option selected>Escolha um Atendimento</option>
                        <option value="0">PBF</option>
                    </select>
                    <span asp-validation-for="TipoAtendimento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="titulo" class="form-label" title="Descrição">Descrição</label>
                    <input asp-for="Descricao" class="form-control form-text text-dark" placeholder="Descrição do atendimento" id="descricao" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="observacao" class="form-label" title="Observações">Observações</label>
                    <input asp-for="Observacao" class="form-control form-text text-dark" placeholder="Observações" />
                    <span asp-validation-for="Observacao" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-sm btn-outline-primary btn-form" title="Cadastrar" />
                <a class="btn btn-sm btn-outline-danger btn-form" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</div>
