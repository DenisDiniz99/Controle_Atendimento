@model AtendimentoViewModel


@{
    ViewData["Title"] = "Atualização de Status";
}


<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto">
        <div class="card-body" style="width: 800px">
            <vc:summary></vc:summary>
            <form asp-action="AtualizarStatus">
                <div class="row bg-light">
                    <h5 class="card-title text-secondary">
                        <i class="fas fa-edit"></i>
                        Atualização de Status do Atendimento
                    </h5>
                    <!--Id-->
                    <div class="col-4">
                        <label for="protocolo" class="col-form-label-sm" title="Protocolo">Protocolo</label>
                        <input asp-for="Protocolo" class="form-control form-control-sm form-text text-dark" id="protocolo" readonly="readonly" />
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="cidadao" class="col-form-label-sm" title="Cidadão">Cidadão</label>
                            <input class="form-control form-control-sm form-text text-dark" id="cidadao" readonly="readonly" />
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="dataCad" class="col-form-label-sm" title="Data">Data de Cadastro do Atendimento</label>
                            <input asp-for="DataHoraAtendimento" class="form-control form-control-sm form-text text-dark" id="dataCad" readonly="readonly" />
                        </div>
                    </div>
                    <div class="col-4">
                        <!--Status Atendimento-->
                        <div class="form-group">
                            <label for="status" class="col-form-label-sm" title="Status">Situação do Atendimento</label>
                            <select class="form-select form-select-sm" aria-label="StatusAtendimento" asp-for="StatusAtendimento">
                                <option value="1" selected>Aberto</option>
                                <option value="2">Cancelado</option>
                                <option value="3">Finalizado</option>
                            </select>
                            <span asp-validation-for="StatusAtendimento" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-sm btn-success btn-form" title="Alterar" />
                    <a class="btn btn-sm btn-danger btn-form" title="Cancelar" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>