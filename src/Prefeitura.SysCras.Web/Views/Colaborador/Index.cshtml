@model IEnumerable<ColaboradorViewModel>

<div class="container">
    <div class="row">
        <h5 class="text-secondary">
            <i class="fas fa-user-tie"></i>
            Lista de Colaboradores
        </h5>
    </div>
    <table class="table table-light text-sm-left">
        <thead>
            <tr>
                <th>Código</th>
                <th>Colaborador(a)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToList())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>
                        <div class="container justify-content-around">
                            <a class="btn btn-sm btn-outline-primary mr-2" asp-action="Detalhes" asp-route-id="@item.Id">
                                <span class="fas fa-search"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>