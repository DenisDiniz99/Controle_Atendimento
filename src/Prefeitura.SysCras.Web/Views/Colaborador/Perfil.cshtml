@model ColaboradorViewModel

@{ 
    ViewData["Title"] = "Perfil";
}

<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto">
        <div class="card-body" style="width: 800px;">
            <h5 class="card-title text-center text-secondary">
                Bem-vindo, @Model.Nome
            </h5>
            <hr />
            <vc:summary></vc:summary>
            <form asp-action="Cadastrar">
                <div class="form-group">
                    <label for="id" class="form-label" title="Código">Código</label>
                    <input asp-for="Id" class="form-control form-text text-dark" readonly="readonly" id="titulo" />
                </div>
                <div class="form-group">
                    <label for="nome" class="form-label" title="Nome">Nome</label>
                    <input asp-for="Nome" class="form-control form-text text-dark" readonly="readonly" id="titulo" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="matricula" class="form-label" title="Matricula">Matrícula</label>
                    <input asp-for="Matricula" class="form-control form-text text-dark" readonly="readonly"  id="titulo" />
                    <span asp-validation-for="Matricula" class="text-danger"></span>
                </div>
                <a class="btn btn-sm btn-outline-primary btn-form" asp-action="Atualizar" asp-route-id="@Model.Id">Atualizar</a>
                <a class="btn btn-sm btn-outline-danger btn-form" asp-action="Excluir" asp-route-id="@Model.Id">Excluir</a>
            </form>
        </div>
    </div>
</div>