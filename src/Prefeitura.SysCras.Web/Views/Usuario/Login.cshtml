@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto" style="width: 400px">
        <div class="card-body">
            <h5 class="card-title text-center text-secondary">
                Entrar
            </h5>
            <hr />
            <vc:summary></vc:summary>
            <form method="post">
                <div class="form-group">
                    <input asp-for="Nome" class="form-control form-text text-dark" placeholder="Nome de usuário" id="nome" />
                    <label for="nome" class="col-form-label"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Senha" class="form-control form-text text-dark" placeholder="Senha de acesso" id="password" />
                    <label for="senha" class="col-form-label"></label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-check mb-4">
                    <input asp-for="LembrarLogin" class="form-check-input" type="checkbox" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Lembrar meu acesso!
                    </label>
                </div>
                <button type="submit" class="btn btn-success btn-form mr-1">Entrar</button>
                <a class="btn btn-primary" style="width: 173px" asp-action="Registro" asp-controller="Usuario">Nova Conta</a>
            </form>
        </div>
    </div>
</div>