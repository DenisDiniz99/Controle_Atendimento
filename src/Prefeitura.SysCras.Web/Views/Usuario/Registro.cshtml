@model RegistroViewModel

@{
    ViewData["Title"] = "Registrar";
}

<div class="d-flex justify-content-center mt-3">
    <div class="card mx-auto" style="width: 400px">
        <div class="card-body">
            <h5 class="card-title text-center text-secondary">
                Nova Conta
            </h5>
            <hr />
            <vc:summary></vc:summary>
            <form method="post">
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-text text-dark" placeholder="E-mail" id="email" />
                    <label for="email" class="col-form-label"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Nome" class="form-control form-text text-dark" placeholder="Nome de usuário" id="nome" />
                    <label for="nome" class="col-form-label"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Senha" class="form-control form-text text-dark" placeholder="Senha" id="password" />
                    <label for="senha" class="col-form-label"></label>
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmeSenha" class="form-control form-text text-dark" placeholder="Confirme sua Senha" id="password" />
                    <label for="senha" class="col-form-label"></label>
                    <span asp-validation-for="ConfirmeSenha" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary mr-1" style="width: 173px">Registrar</button>
                <a class="link-primary ml-4" style="width: 173px" asp-action="Login" asp-controller="Usuario">Já possui uma conta ?</a>
            </form>
        </div>
    </div>
</div>