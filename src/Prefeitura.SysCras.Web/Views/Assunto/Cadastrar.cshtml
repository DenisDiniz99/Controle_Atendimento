@model AssuntoAtendimentoViewModel

@{ 
    ViewData["Title"] = "Cadastro de Assunto";
}

<div  class="d-flex justify-content-center mt-3">
    <div class="card mx-auto">
        <div class="card-body" style="width:800px">
            
            <vc:summary></vc:summary>
            <form asp-action="Cadastrar">
                <div class="row bg-light">
                    <h5 class="card-title text-secondary">
                        <i class="fas fa-comment-dots"></i>
                        Cadastro de Assunto
                    </h5>
                    <div class="col">
                        <div class="form-group">
                            <label for="titulo" class="col-form-label-sm" title="Assunto">Assunto</label>
                            <input asp-for="TituloAssunto" class="form-control form-control-sm form-text text-dark" placeholder="Título do Assunto" id="titulo" />
                            <span asp-validation-for="TituloAssunto" class="text-danger"></span>
                        </div>
                        <input type="submit" class="btn btn-sm btn-success btn-form mr-2" title="Cadastrar" />
                        <a class="btn btn-sm btn-danger btn-form" asp-action="Index">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
